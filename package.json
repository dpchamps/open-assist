{
  "name": "open-assist",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "tsx ./src/main.ts",
    "build:wakeword": "esbuild src/browser/wakeword-entry.js --bundle --format=iife --platform=browser --outfile=public/js/wakeword.js",
    "copy:models": "cp -r node_modules/openwakeword-wasm-browser/models/*.onnx public/models/",
    "copy:wasm": "cp node_modules/onnxruntime-web/dist/ort-wasm-simd-threaded*.wasm node_modules/onnxruntime-web/dist/ort-wasm-simd-threaded*.mjs public/wasm/",
    "build:browser": "mkdir -p public/js public/models public/wasm && npm run copy:models && npm run copy:wasm && npm run build:wakeword",
    "start:web": "npm run build:browser && tsx ./src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^25.2.1",
    "@types/ws": "^8.18.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@google-cloud/text-to-speech": "^6.4.0",
    "@mariozechner/pi-agent-core": "^0.52.8",
    "@mariozechner/pi-ai": "^0.52.8",
    "@tomtom-org/maps-sdk": "^0.42.1",
    "dotenv": "^17.2.4",
    "openmeteo": "^1.2.3",
    "openwakeword-wasm-browser": "^0.1.1",
    "ws": "^8.19.0"
  },
  "type": "module"
}
